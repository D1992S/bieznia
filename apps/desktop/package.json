{
  "name": "@moze/desktop",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "dev": "pnpm run build && pnpm run start",
    "start": "electron .",
    "typecheck": "tsc --noEmit",
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json --watch --preserveWatchOutput"
  },
  "dependencies": {
    "@moze/core": "workspace:*",
    "@moze/shared": "workspace:*"
  },
  "devDependencies": {
    "electron": "^40.4.0"
  }
}
